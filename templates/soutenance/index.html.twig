{% extends 'base.html.twig' %}

{% block title %}Soutenance index{% endblock %}

{% block body %}
    <h1>Soutenance index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Date</th>
                <th>Note</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for soutenance in soutenances %}
            <tr>
                <td>{{ soutenance.id }}</td>
                <td>{{ soutenance.date ? soutenance.date|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ soutenance.note }}</td>
                <td>
                    <a href="{{ path('app_soutenance_show', {'id': soutenance.id}) }}">show</a>
                    <a href="{{ path('app_soutenance_edit', {'id': soutenance.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_soutenance_new') }}">Create new</a>
{% endblock %}
